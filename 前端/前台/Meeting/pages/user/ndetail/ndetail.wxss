/* pages/user/ndetail/ndetail.wxss */
@import '/components/font/font.wxss';


page {
    background-color: #f5f5f5;
  }
.swpr{
  width: 100%;
  height: 500rpx;
}
 
.swpr_it image{
  width: 100%;
}
.animal_info{
  display: flex;
  flex-direction: column;
  width: 90%;
  margin-top: 40rpx;
  margin-left: 5%;
  background-color: rgb(255, 255, 255);
  box-shadow: 0rpx 0rpx 8rpx 8rpx rgba(50, 85, 206, 0.1);
  /* border: 1px solid #d3d3d3; */
  border-radius: 20rpx;
  /* border-bottom: 1px solid #ededed; */
  padding-top: 10px;
  /* background-color: #fff; */
 
}
.animal_photo{
  width: 100%;
  /* background-color: #666; */
  margin-bottom: 10px;
   /* margin-left: 6px; */
}
.animal_title{
  margin-left: 40rpx;
  /* font-weight: bold; */
  font-family: 'Alibaba-PuHuiTi-Heavy';
  /* font-weight: bold; */
  font-size: 36rpx;
  line-height: 60rpx;
  /* text-align: center; */
  color: rgb(10, 10, 10);
  vertical-align: middle;
  margin-bottom: 10px;
}

.animal_nikename{
  width: 90%;
  margin-top: 10rpx;
  margin-left: 40rpx;
  font-size: 28rpx;
  font-family: 'Alibaba-PuHuiTi-Light';
  line-height: 50rpx;
  
  color: rgb(126, 126, 126);
  vertical-align: middle;
  margin-bottom: 10px;
}
.animal_createtime{
    margin-left: 40rpx;
    margin-bottom: 10rpx;
    font-size: 25rpx;
    font-family: 'Alibaba-PuHuiTi-Light';
    line-height: 28rpx;
    overflow: hidden;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    color: rgb(160, 160, 160);
    vertical-align: middle;
    margin-bottom: 10px;
    text-align: left;
}
.animal_img {
  width: 100%;
  margin: auto 0;
 
}
.animal_intro{
 
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: #666;
  line-height: 40rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  /* text-align:justify; */
  
 
}
.article_state{
  width: 100%;
  flex-direction: row;
  margin-bottom: 20rpx;
}
.content_text{
    text-indent: 58rpx;
}


